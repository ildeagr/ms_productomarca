spring:
 cloud:
  gateway:
   routes:
    - id: servicios-productos
      uri: lb://servicio-productos
      predicates:
        - Path:/api/productos/**
      filter:
       - StripPrefix=2
    - id: servicios-productos
      uri: lb://servicio-items
      predicates:
        - Path:/api/items/**
      filter:
        - StripPrefix=2